<div class="row">
    <div class="col-11">
        <textarea readonly id="chatbox" name="chatbox" rows="5" cols="60" style="overflow-y: scroll; resize:none; background-color: black; color:#B0B0B0;">{{ chat }}</textarea><br><br>
    </div>
</div>
<div class="row pb-3">
    <div class="col-11">
        <form onsubmit="return false">
            <input type="text" id="text-input" name="text-input" placeholder="Enter chat text" size="57" style="background-color: black; color:gray;"><br><br>
            <input type="submit" value="Post" onclick="postText()">
        </form>
    </div>
</div>
<div class="container-fluid border-top border-bottom border-info pb-3">
    <div class="border-bottom border-secondary pt-3" id="subject_listing">
    {{#each topicsJSON.subjects}}
        <div class="row picture border-top border-secondary">
            <div class="col-2 text-center border-end border-secondary">
                {{#getElement @root.topicsJSON.subjects @index}}
                    {{this}}
                {{/getElement}}
                <br>
                <img src="{{#getElement @root.topicsJSON.logoPaths @index}}
                    {{this}}
                {{/getElement}}" class="img-fluid">
            </div>
            <div class="col-10 my-auto">
                    {{#getElement @root.topicsJSON.description @index}}
                        {{this}}
                    {{/getElement}}
            </div>
        </div>
    {{/each}}
    </div>
</div>

<footer>
    <script type="text/javascript" src="/JS/chatbox-client.js"></script>
    <script type="text/javascript" src="/JS/forum-client.js"></script>
    <link rel="stylesheet" href="/CSS/style-forum_subjects.css">
</footer>