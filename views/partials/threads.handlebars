<div class="thread container-fluid pb-3">
    <div class="header row">
        <div class="col-7 offset-2 text-center">
            <h3 class="">{{threads.title}}</h3>
        </div>
        <div class="col-2 offset-1 mt-auto">
            <button class="float-end" onclick="showReplyPrompt()">Create thread</button>
        </div>
    </div>
    {{#each threads.threads as |thread|}}
        <div><a href = "{{@index}}/{{turnPathURLFriendly thread.author}}/{{turnPathURLFriendly thread.title}}/1">
            <div class="option row border-top border-bottom pb-3 pt-3">
                <div class="col-1 border-end border-light">
                    <div class="text-center" style="margin:auto">
                        <img src="/images/topic_icon.png" class = "img-fluid image-thumbnail">
                    </div>
                </div>
                <div class="col-11 align-self-center border-end border-light">
                    <div>{{thread.title}}</div>
                    <span style="color:#909090;">Started by: </span>{{thread.author}}<span style="color:#909090;">, {{thread.latest_date}}</span>
                </div>
            </div>
            </a>
        </div>
    {{/each}}

    <div class="footer row">
        <div class="col-2 offset-10 mt-auto">
            <button class="float-end" onclick="showReplyPrompt()">Create thread</button>
        </div>
    </div>

    <div class="row border-top mt-3" id="replyprompt" style="display: none">
        <div class="col-12 text-center border">
            <h2>New Thread</h2>
            <form onsubmit="return false">
                <div class="text-start">
                    Title:
                </div>
                <textarea id="thread-title" maxlength="750" style="margin-bottom: 5px; min-height: 2.8vh; max-height: 2.8vh; min-width: 100%; resize:none; background-color: black; color:#B0B0B0;"></textarea>
                <div class="text-start">
                    Message:
                </div>
                <textarea id="chatbox-thread" maxlength="750" style="min-height: 30vh; min-width: 100%; overflow-y: scroll; resize:none; background-color: black; color:#B0B0B0;"></textarea>
                <input class="post-reply float-end" type="submit" onclick="postThread()">
            </form>
        </div>
    </div>
</div>

<footer>
    <script type="text/javascript" src="/JS/forum-client.js"></script>
    <link rel="stylesheet" href="/CSS/style-forum.css">
</footer>
